<Window x:Class="OOS.Game.IntroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Office of Shadows"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Width="850"
        Height="520"
        Background="#101010">

    <Border BorderBrush="#1A1A1A" BorderThickness="2" CornerRadius="10" Background="#101010">
        <Grid>
            <!-- Header bar -->
            <Border Background="#161616" Height="42" VerticalAlignment="Top" CornerRadius="8,8,0,0">
                <DockPanel>
                    <TextBlock Text="OFFICE OF SHADOWS"
                               Foreground="#90FFB3"
                               FontWeight="Bold"
                               FontSize="16"
                               Margin="14,8,0,0"
                               FontFamily="Consolas" />
                </DockPanel>
            </Border>

            <!-- Version text (top-left corner) -->
            <TextBlock Text="Game version: Pre-Release 1.1.6"
                       Foreground="#555555"
                       FontSize="11"
                       FontFamily="Consolas"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="14,48,0,0"/>

            <!-- Main body -->
            <StackPanel Margin="60,70,60,40" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Title -->
                <TextBlock Text="Disclaimer"
                           Foreground="#90FFB3"
                           FontSize="26"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           FontFamily="Consolas"
                           Margin="0,0,0,14"/>

                <!-- Description -->
                <TextBlock TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="#CCCCCC"
                           TextAlignment="Center"
                           Margin="0,0,0,25"
                           FontFamily="Consolas"
                           Text="This simulation is part of an interactive cybersecurity investigation.
                                  It uses real file interactions and terminal windows for immersion. 
                                  You may receive system-like messages and unexpected behaviours. Proceed with caution."/>

                <!-- Bullet list -->
                <StackPanel Margin="0,0,0,30">
                    <StackPanel.Resources>
                        <Style x:Key="BulletRow" TargetType="StackPanel">
                            <Setter Property="Orientation" Value="Horizontal"/>
                            <Setter Property="Margin" Value="0,8,0,0"/>
                        </Style>
                    </StackPanel.Resources>

                    <StackPanel Style="{StaticResource BulletRow}">
                        <Ellipse Width="7" Height="7" Fill="#90FFB3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Foreground="#C0C0C0" Text="Creates a secure folder on your Desktop in which all important files are stored."/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource BulletRow}">
                        <Ellipse Width="7" Height="7" Fill="#90FFB3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Foreground="#C0C0C0" Text="Includes tools such as Terminal, VPN, and Email."/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource BulletRow}">
                        <Ellipse Width="7" Height="7" Fill="#90FFB3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Foreground="#C0C0C0" Text="Simulates digital interference and surveillance attempts."/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource BulletRow}">
                        <Ellipse Width="7" Height="7" Fill="#90FFB3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Foreground="#C0C0C0" Text="All effects are reversible via the system tray icon."/>
                    </StackPanel>
                </StackPanel>

                <!-- Checkbox -->
                <CheckBox x:Name="AcknowledgeCheck"
                          Content="I understand and wish to proceed"
                          Foreground="#A0A0A0"
                          FontSize="14"
                          FontFamily="Consolas"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,18"/>

                <!-- Start Button -->
                <Button x:Name="StartButton"
                        Content="START GAME!"
                        Width="220"
                        Height="52"
                        FontSize="15"
                        FontWeight="Bold"
                        Background="#0C1A0C"
                        Foreground="#90FFB3"
                        BorderBrush="#90FFB3"
                        BorderThickness="1.5"
                        FontFamily="Consolas"
                        HorizontalAlignment="Center"
                        Click="StartButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0C1A0C"/>
                            <Setter Property="Foreground" Value="#90FFB3"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#123812"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1B531B"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Footer branding -->
                <TextBlock Text="RETIS Software (c) 2025"
                           Foreground="#555555"
                           FontSize="12"
                           FontFamily="Consolas"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,18,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
