<Window x:Class="OOS.Game.VideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Office of Shadows" Height="450" Width="800"
        WindowStyle="None" ResizeMode="NoResize" Background="Black"
        WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <MediaElement x:Name="VideoPlayer"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual"
                      Stretch="UniformToFill"
                      MediaEnded="VideoPlayer_MediaEnded"
                      MediaFailed="VideoPlayer_MediaFailed" />
        <Button x:Name="SkipButton"
                Content="Skip"
                Width="90" Height="32"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,16,16"
                Click="SkipButton_Click"
                Opacity="0.6"/>
    </Grid>
</Window>
