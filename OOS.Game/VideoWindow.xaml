<Window x:Class="OOS.Game.VideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message from Liam"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        Background="#101010"
        Width="900"
        Height="560"
        WindowStartupLocation="Manual"
        SizeToContent="WidthAndHeight">

    <!-- Outer frame to match intro -->
    <Border BorderBrush="#1A1A1A" BorderThickness="2" CornerRadius="10" Background="#101010">
        <Grid>
            <!-- Header bar (same moody scheme) -->
            <Border Background="#161616" Height="42" VerticalAlignment="Top" CornerRadius="8,8,0,0">
                <DockPanel>
                    <TextBlock Text="Message from Liam"
                               Foreground="#90FFB3"
                               FontWeight="Bold"
                               FontSize="16"
                               Margin="14,8,0,0"
                               FontFamily="Consolas" />
                </DockPanel>
            </Border>

            <!-- Video area (letterboxes as needed) -->
            <Border Margin="8,56,8,8" Background="Black" CornerRadius="8">
                <Grid>
                    <MediaElement x:Name="video"
                                  LoadedBehavior="Manual"
                                  UnloadedBehavior="Stop"
                                  Stretch="Uniform"
                                  ScrubbingEnabled="True"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
