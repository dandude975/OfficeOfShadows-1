<Window x:Class="OOS.Game.IntegrityReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Integrity Check"
        Height="260" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#0d0d0d"
        Foreground="White"
        FontFamily="Consolas"
        Topmost="True"
        ShowInTaskbar="False">
    <Border BorderBrush="#333" BorderThickness="1" CornerRadius="6" Padding="14">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="System Integrity Verification"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="OutputBox"
                         Background="#0d0d0d"
                         Foreground="White"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="13"
                         IsReadOnly="True"
                         TextWrapping="Wrap"/>
            </ScrollViewer>

            <Button Grid.Row="2"
                    Content="OK"
                    Width="90" Height="28"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0"
                    Background="#222"
                    Foreground="White"
                    BorderBrush="#444"
                    Click="OkButton_Click"/>
        </Grid>
    </Border>
</Window>
