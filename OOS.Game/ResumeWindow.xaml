<Window x:Class="OOS.Game.ResumeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Office of Shadows"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#0D0D0D"
        Foreground="White"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!-- Added for version text -->
        </Grid.RowDefinitions>

        <!-- Header section -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,80">
            <TextBlock Text="Office of Shadows"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />

            <TextBlock x:Name="LastSaveText"
                       Text="No previous save found."
                       FontSize="14"
                       FontFamily="Consolas"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" />
        </StackPanel>

        <!-- Button section -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,40">

            <Button x:Name="ContinueBtn"
                    Content="CONTINUE"
                    Width="260" Height="48"
                    FontSize="16"
                    Background="#1C1C1C"
                    Foreground="White"
                    BorderBrush="#00FF99"
                    BorderThickness="2"
                    Click="ContinueBtn_Click"
                    Margin="0,0,0,10"
                    Cursor="Hand" />

            <Button x:Name="NewGameBtn"
                    Content="NEW GAME"
                    Width="260" Height="48"
                    FontSize="16"
                    Background="#1C1C1C"
                    Foreground="White"
                    BorderBrush="#00FF99"
                    BorderThickness="2"
                    Click="NewGameBtn_Click"
                    Margin="0,0,0,10"
                    Cursor="Hand" />

            <Button x:Name="ExitBtn"
                    Content="EXIT"
                    Width="260" Height="48"
                    FontSize="16"
                    Background="#1C1C1C"
                    Foreground="White"
                    BorderBrush="#00FF99"
                    BorderThickness="2"
                    Click="ExitBtn_Click"
                    Cursor="Hand" />
        </StackPanel>

        <!-- Version Text -->
        <TextBlock Grid.Row="2"
                   Text="Game version: Pre-Release 1.1.7"
                   FontSize="12"
                   Foreground="#666"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"
                   Opacity="0.8"/>
    </Grid>
</Window>
