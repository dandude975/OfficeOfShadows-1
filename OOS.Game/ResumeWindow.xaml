<Window x:Class="OOS.Game.ResumeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resume" Width="520" Height="320"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        AllowsTransparency="False"
        Background="#111111"
        Foreground="White"
        Loaded="ResumeWindow_Loaded">

    <Border CornerRadius="12" Background="#151515" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title / Version -->
            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="Continue your session?" FontSize="22" FontWeight="Bold" />
                <TextBlock Text="Game version: Pre-Release 1.1.7"
                           Foreground="#7FE08A" Margin="0,6,0,0" />
            </StackPanel>

            <!-- Body -->
            <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="10">
                <TextBlock x:Name="LastSaveText"
                           Text="Last save: —"
                           Foreground="#CCCCCC"/>
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,8,0,0">
                    <Button x:Name="ContinueBtn"
                            Width="140" Height="36"
                            Content="Continue"
                            Click="ContinueBtn_Click"
                            Background="#2A2A2A" Foreground="White"/>
                    <Button x:Name="NewGameBtn"
                            Width="140" Height="36"
                            Content="New Game"
                            Click="NewGameBtn_Click"
                            Background="#2A2A2A" Foreground="White"/>
                </StackPanel>
            </StackPanel>

            <!-- Close affordance -->
            <StackPanel Grid.Row="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Width="80" Height="30" Content="Close"
                        Click="Close_Click"
                        Background="#2A2A2A" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
