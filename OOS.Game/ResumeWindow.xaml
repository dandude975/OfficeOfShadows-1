<Window x:Class="OOS.Game.ResumeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Office of Shadows"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Width="720"
        Height="360"
        Background="#101010">

    <Border BorderBrush="#1A1A1A" BorderThickness="2" CornerRadius="10" Background="#101010">
        <Grid>
            <!-- Header bar -->
            <Border Background="#161616" Height="42" VerticalAlignment="Top" CornerRadius="8,8,0,0">
                <DockPanel>
                    <TextBlock Text="OFFICE OF SHADOWS"
                               Foreground="#90FFB3"
                               FontWeight="Bold"
                               FontSize="16"
                               Margin="14,8,0,0"
                               FontFamily="Consolas"/>
                </DockPanel>
            </Border>

            <!-- Version (top-left) -->
            <TextBlock Text="Game version: Pre-Release 1.1.4"
                       Foreground="#555555"
                       FontSize="11"
                       FontFamily="Consolas"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="14,48,0,0"/>

            <!-- Body -->
            <StackPanel Margin="40,80,40,40" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">
                <TextBlock Text="Continue your investigation?"
                           Foreground="#90FFB3" FontFamily="Consolas"
                           FontSize="22" FontWeight="Bold" TextAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock x:Name="LastSaveText"
                           Foreground="#C0C0C0" FontFamily="Consolas"
                           FontSize="14" TextAlignment="Center" Margin="0,0,0,24"/>

                <!-- Buttons row (no Spacing in WPF; use Margin on 2nd button) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="ContinueBtn" Content="CONTINUE"
                            Width="180" Height="46" FontSize="14" FontWeight="Bold"
                            Background="#0C1A0C" Foreground="#90FFB3"
                            BorderBrush="#90FFB3" BorderThickness="1.5"
                            FontFamily="Consolas" Click="ContinueBtn_Click"/>
                    <Button x:Name="NewGameBtn" Content="NEW GAME"
                            Width="180" Height="46" FontSize="14" FontWeight="Bold"
                            Background="#3A3A3A" Foreground="#FFFFFF"
                            BorderBrush="#5A5A63" BorderThickness="1.5"
                            FontFamily="Consolas" Click="NewGameBtn_Click"
                            Margin="16,0,0,0"/>
                </StackPanel>

                <TextBlock Text="RETIS Software (c) 2025"
                           Foreground="#555555" FontSize="12" FontFamily="Consolas"
                           TextAlignment="Center" Margin="0,18,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
