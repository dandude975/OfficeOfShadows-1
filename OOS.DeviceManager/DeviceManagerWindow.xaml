<Window x:Class="OOS.DeviceManager.DeviceManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Device Manager"
        Height="560" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#0D0D0D" Foreground="White" FontFamily="Segoe UI"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="False">

    <!-- THEME -->
    <Window.Resources>
        <Color x:Key="Bg0">#0D0D0D</Color>
        <Color x:Key="Bg1">#111111</Color>
        <Color x:Key="Border1">#222222</Color>
        <Color x:Key="Accent">#00FF99</Color>
        <SolidColorBrush x:Key="BrushBg0" Color="{StaticResource Bg0}" />
        <SolidColorBrush x:Key="BrushBg1" Color="{StaticResource Bg1}" />
        <SolidColorBrush x:Key="BrushBorder" Color="{StaticResource Border1}" />
        <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource Accent}" />
        <SolidColorBrush x:Key="BrushTextDim" Color="#CCCCCC" />

        <!-- Force all text elements to use white by default -->
        <Style TargetType="TextBlock" BasedOn="{x:Null}">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Make CheckBox text white -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Make TabItem text white and active tab green -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#101010"/>
            <Setter Property="BorderBrush" Value="#222"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="#00FF99"/>
                    <Setter Property="Background" Value="#141414"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox styling for white text -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="BorderBrush" Value="#222"/>
        </Style>


        <!-- Buttons -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1C1C1C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="BorderBrush" Value="{StaticResource BrushAccent}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b" Property="Background" Value="#141414"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Panel card -->
        <Style x:Key="PanelCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BrushBg1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- DataGrid dark styling -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#222222"/>
            <Setter Property="RowBackground" Value="#111111"/>
            <Setter Property="AlternatingRowBackground" Value="#131313"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#151515"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#222222"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- selection brush -->
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#17221D"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
    </Window.Resources>

    <Border BorderBrush="{StaticResource BrushBorder}" BorderThickness="1" CornerRadius="8" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="38"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title bar -->
            <Grid Grid.Row="0" Background="#101010" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="Device Manager" VerticalAlignment="Center" Margin="12,0,0,0"
                           Foreground="{StaticResource BrushAccent}" FontWeight="Bold"/>
                <Button Content="×" Width="34" Height="26" VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="0,0,6,0" Click="CloseBtn_Click"/>
            </Grid>

            <!-- Body -->
            <Grid Grid.Row="1" Margin="12">
                <TabControl
                    Background="{StaticResource BrushBg1}"
                    BorderBrush="{StaticResource BrushBorder}" BorderThickness="1">

                    <!-- Hardware Tab (unchanged) -->
                    <TabItem Header="Hardware">
                        <Grid Background="{StaticResource BrushBg0}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="360"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left: hardware grid -->
                            <Border Style="{StaticResource PanelCard}">
                                <StackPanel>
                                    <TextBlock Text="Devices" Style="{StaticResource CardTitle}"/>
                                    <DataGrid x:Name="HardwareGrid" Height="400" AutoGenerateColumns="False"
                                              SelectionChanged="HardwareGrid_SelectionChanged">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                                            <DataGridTextColumn Header="Type" Binding="{Binding DeviceType}" Width="*"/>
                                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                        <Button x:Name="RefreshHardwareBtn" Content="Refresh" Width="100" Click="RefreshHardwareBtn_Click" Margin="6,0"/>
                                        <Button x:Name="RevealBtn" Content="Show Details" Width="120" Click="RevealBtn_Click" Margin="6,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Right: details -->
                            <Border Grid.Column="1" Style="{StaticResource PanelCard}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <TextBlock Text="Device Details" Style="{StaticResource CardTitle}"/>
                                        <TextBlock x:Name="DetailName" Foreground="White" FontFamily="Consolas" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="DetailType" Foreground="White" FontFamily="Consolas" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="DetailStatus" Foreground="White" FontFamily="Consolas" Margin="0,0,0,6"/>
                                        <TextBlock x:Name="DetailNotes" Foreground="White" FontFamily="Consolas" TextWrapping="Wrap" Margin="0,6,0,0"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- Network Tab -->
                    <TabItem Header="Network">
                        <Grid Background="{StaticResource BrushBg0}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Router card spans both columns -->
                            <Border Grid.Row="0" Style="{StaticResource PanelCard}">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Router" Style="{StaticResource CardTitle}" Margin="0,0,12,0"/>
                                    <TextBlock Text="LAN: " Foreground="{StaticResource BrushTextDim}" Margin="0,0,4,0"/>
                                    <TextBlock x:Name="RouterLanText" Text="…" Margin="0,0,12,0"/>
                                    <TextBlock Text="WAN: " Foreground="{StaticResource BrushTextDim}" Margin="0,0,4,0"/>
                                    <TextBlock x:Name="RouterWanText" Text="…" />
                                </StackPanel>
                            </Border>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="360"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Interfaces -->
                                <Border Style="{StaticResource PanelCard}">
                                    <StackPanel>
                                        <TextBlock Text="Interfaces" Style="{StaticResource CardTitle}"/>
                                        <DataGrid x:Name="InterfaceGrid" Height="340" AutoGenerateColumns="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                                                <DataGridTextColumn Header="Status" Binding="{Binding OperationalStatus}" Width="*"/>
                                                <DataGridTextColumn Header="IP(s)" Binding="{Binding Addresses}" Width="2*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </Border>

                                <!-- Connections -->
                                <Border Grid.Column="1" Style="{StaticResource PanelCard}">
                                    <StackPanel>
                                        <TextBlock Text="Active Connections (TCP)" Style="{StaticResource CardTitle}"/>
                                        <DataGrid x:Name="ConnectionsGrid" Height="340" AutoGenerateColumns="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Local IP" Binding="{Binding LocalIP}" Width="*"/>
                                                <DataGridTextColumn Header="Local Port" Binding="{Binding LocalPort}" Width="*"/>
                                                <DataGridTextColumn Header="Remote IP" Binding="{Binding RemoteIP}" Width="*"/>
                                                <DataGridTextColumn Header="Remote Port" Binding="{Binding RemotePort}" Width="*"/>
                                                <DataGridTextColumn Header="State" Binding="{Binding State}" Width="*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
                                <Button x:Name="RefreshNetworkBtn" Content="Refresh" Width="100" Click="RefreshNetworkBtn_Click" Margin="6,0"/>
                                <CheckBox x:Name="AutoRefreshChk" Content="Auto-refresh (2s)" IsChecked="True" Margin="6,6,0,0" Foreground="{StaticResource BrushTextDim}"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>

            <TextBlock Grid.Row="2" Text="Tip: block devices by IP using the Firewall tool (coming soon)"
                       FontSize="12" Foreground="{StaticResource BrushTextDim}" Margin="12,6,12,10"/>
        </Grid>
        
        
    </Border>
</Window>
