<Window x:Class="OOS.Terminal.CommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C:\Windows\System32\cmd.exe"
        Width="1000"
        Height="620"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="#000000"
        FontFamily="Lucida Console"
        FontSize="14">
    <!-- If you add an icon file later, you can re-enable this line with a valid pack URI:
        Icon="pack://application:,,,/OOS.Terminal;component/Resources/cmd.ico"
        -->
    <Grid Background="#000000">
        <Border Padding="8" Background="#000000">
            <ScrollViewer x:Name="Scroller"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="#000000">
                <TextBox x:Name="Screen"
                         Background="#000000"
                         Foreground="#C0C0C0"
                         CaretBrush="#C0C0C0"
                         BorderThickness="0"
                         AcceptsReturn="True"
                         AcceptsTab="False"
                         SpellCheck.IsEnabled="False"
                         IsUndoEnabled="False"
                         FontFamily="Lucida Console, Consolas, Courier New"
                         FontSize="14"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Hidden"
                         HorizontalScrollBarVisibility="Hidden"
                         PreviewKeyDown="Screen_PreviewKeyDown"
                         TextChanged="Screen_TextChanged"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
