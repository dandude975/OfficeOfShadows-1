<Window x:Class="OOS.Firewall.FirewallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Firewall"
        Height="620" Width="1040"
        WindowStartupLocation="CenterScreen"
        Background="#0D0D0D" Foreground="White" FontFamily="Segoe UI"
        WindowStyle="None" ResizeMode="NoResize">

    <!-- THEME -->
    <Window.Resources>
        <Color x:Key="Bg0">#0D0D0D</Color>
        <Color x:Key="Bg1">#111111</Color>
        <Color x:Key="Border1">#222222</Color>
        <Color x:Key="Accent">#00FF99</Color>
        <SolidColorBrush x:Key="BrushBg0" Color="{StaticResource Bg0}" />
        <SolidColorBrush x:Key="BrushBg1" Color="{StaticResource Bg1}" />
        <SolidColorBrush x:Key="BrushBorder" Color="{StaticResource Border1}" />
        <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource Accent}" />
        <SolidColorBrush x:Key="BrushTextDim" Color="#CCCCCC" />

        <!-- Global white text -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="BorderBrush" Value="#222"/>
        </Style>

        <!-- Buttons: grey with white text (high contrast) -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#141414"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="BorderBrush" Value="{StaticResource BrushAccent}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b" Property="Background" Value="#202020"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="b" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cards -->
        <Style x:Key="PanelCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BrushBg1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- DataGrid dark -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#222222"/>
            <Setter Property="RowBackground" Value="#111111"/>
            <Setter Property="AlternatingRowBackground" Value="#131313"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#151515"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#222222"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#17221D"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
    </Window.Resources>

    <Border BorderBrush="{StaticResource BrushBorder}" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="38"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title bar -->
            <Grid Grid.Row="0" Background="#101010" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="Firewall" VerticalAlignment="Center" Margin="12,0,0,0"
                           Foreground="{StaticResource BrushAccent}" FontWeight="Bold"/>
                <Button Content="×" Width="34" Height="26" VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="0,0,6,0" Click="CloseBtn_Click"/>
            </Grid>

            <!-- Body -->
            <Grid Grid.Row="1" Margin="12">
                <TabControl Background="{StaticResource BrushBg1}"
                            BorderBrush="{StaticResource BrushBorder}" BorderThickness="1">

                    <!-- Rules tab -->
                    <TabItem Header="Rules">
                        <Grid Background="{StaticResource BrushBg0}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Add Rule (use WrapPanel so nothing clips) -->
                            <Border Grid.Row="0" Style="{StaticResource PanelCard}">
                                <WrapPanel VerticalAlignment="Center">
                                    <TextBlock Text="Add rule:" Style="{StaticResource CardTitle}" Margin="0,4,12,0"/>

                                    <TextBlock Text="Type" Margin="0,6,6,0"/>
                                    <ComboBox x:Name="RuleTypeCombo" Width="120" SelectedIndex="0"
                                              Background="#141414" Foreground="White" Margin="0,2,12,0">
                                        <ComboBoxItem Content="IP / CIDR"/>
                                        <ComboBoxItem Content="Port"/>
                                    </ComboBox>

                                    <TextBlock Text="Value" Margin="0,6,6,0"/>
                                    <TextBox x:Name="RuleValueText" Width="200"
                                             ToolTip="IPv4 or CIDR (e.g., 10.1.2.0/24) or port number"
                                             Margin="0,2,12,0"/>

                                    <TextBlock Text="Protocol" Margin="0,6,6,0"/>
                                    <ComboBox x:Name="ProtocolCombo" Width="90" SelectedIndex="0"
                                              Background="#141414" Foreground="White" Margin="0,2,12,0">
                                        <ComboBoxItem Content="TCP"/>
                                    </ComboBox>

                                    <TextBlock Text="Notes" Margin="0,6,6,0"/>
                                    <TextBox x:Name="RuleNoteText" Width="260" Margin="0,2,12,0"
                                             ToolTip="Notes (optional)"/>

                                    <Button Content="Add" Width="100" Margin="0,2,0,0" Click="AddRuleBtn_Click"/>
                                </WrapPanel>
                            </Border>

                            <!-- Rules grid -->
                            <Border Grid.Row="1" Style="{StaticResource PanelCard}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <DataGrid x:Name="RulesGrid" AutoGenerateColumns="False" Grid.Row="0" SelectionMode="Single">
                                        <DataGrid.Columns>
                                            <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="80"/>
                                            <DataGridTextColumn Header="Type"     Binding="{Binding Type}"     Width="120"/>
                                            <DataGridTextColumn Header="Value"    Binding="{Binding Value}"    Width="*"/>
                                            <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="90"/>
                                            <DataGridTextColumn Header="Notes"    Binding="{Binding Notes}"    Width="2*"/>
                                            <DataGridTextColumn Header="Added"    Binding="{Binding AddedOn}"  Width="160"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,8,0,0">
                                        <Button Content="Enable"  Width="100" Margin="6,0" Click="EnableRuleBtn_Click"/>
                                        <Button Content="Disable" Width="100" Margin="6,0" Click="DisableRuleBtn_Click"/>
                                        <Button Content="Remove"  Width="100" Margin="6,0" Click="RemoveRuleBtn_Click"/>
                                        <Button Content="Save"    Width="100" Margin="6,0" Click="SaveRulesBtn_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- Activity tab -->
                    <TabItem Header="Activity">
                        <Grid Background="{StaticResource BrushBg0}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Style="{StaticResource PanelCard}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Blocked connection attempts"
                                               Style="{StaticResource CardTitle}" Margin="0,0,12,0"/>
                                    <CheckBox x:Name="AutoRefreshChk" IsChecked="True"
                                              Content="Auto-refresh (2s)" Margin="12,4,0,0"
                                              Foreground="{StaticResource BrushTextDim}"/>
                                    <Button Content="Clear log" Margin="12,0,0,0" Width="110" Click="ClearLogBtn_Click"/>
                                    <Button Content="Export JSON" Margin="12,0,0,0" Width="120" Click="ExportLogBtn_Click"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1" Style="{StaticResource PanelCard}">
                                <DataGrid x:Name="ActivityGrid" AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Time"         Binding="{Binding Timestamp}"  Width="200"/>
                                        <DataGridTextColumn Header="Local IP"     Binding="{Binding LocalIP}"    Width="*"/>
                                        <DataGridTextColumn Header="Local Port"   Binding="{Binding LocalPort}"  Width="*"/>
                                        <DataGridTextColumn Header="Remote IP"    Binding="{Binding RemoteIP}"   Width="*"/>
                                        <DataGridTextColumn Header="Remote Port"  Binding="{Binding RemotePort}" Width="*"/>
                                        <DataGridTextColumn Header="Matched Rule" Binding="{Binding Matched}"    Width="2*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>

            <TextBlock Grid.Row="2"
                       Text="Blocks are simulated in-game; OS firewall is not modified."
                       FontSize="12" Foreground="{StaticResource BrushTextDim}" Margin="12,6,12,10"/>
        </Grid>
    </Border>
</Window>
